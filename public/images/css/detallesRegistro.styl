@import 'style'

#contentContainer
	margin-top -2em !important
	.bg-gray
		border-bottom solid 5px #ccc
		border-top solid 5px #ccc
		margin-top 2em	
	#etapas
		overflow hidden
		box-sizing border-box
		padding-top 0.5em
		padding-bottom 0.5em
		font-size 18px
		padding-bottom 1.5em
		padding-top 1.5em

		li
			width 32%
			p
				font-size 17px !important
	#registerForm
		margin-top -5px
		border-top solid 5px #15D4E5
		padding-top 2em
		padding-bottom 3em
		form
			font-family: "Lato", Helvetica, Arial, sans-serif;
			input,select
				margin-bottom 1.8em
			#izquierda
				float left
				width 40%
				overflow hidden
			#derecha
				float right
				width 55%
				margin-left 5%
				textarea
					margin-top 21px
					margin-bottom 21px
					height: 158px;
				button[type='submit']
					float right
					width 300px
			.images
				width 100%
				border dotted 2px #bdc3c7
				border-radius 5px
				margin-bottom 1em
				padding 0.5em
				padding-bottom: 0 !important;
				.item
					margin-left 5px
				#plusImage
					background #E56B15
					text-align center
					padding 0.7em
					span
						font-size 18px
					&:hover span
						padding-top 4em
						cursor pointer
						transition all ease 0.3s
						text-shadow: 0px 1px 2px rgba(0, 0, 0, 1);
				li
					width 23.9%
					position relative
					height 80px
					cursor pointer
					overflow hidden
					img
						width 100%

				
					#add-imagen
						position absolute
						top 0 
						left 0
						width 100%
						height 100%
						opacity 0
						cursor pointer
					
		
		


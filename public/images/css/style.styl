
@import 'nib'


@import '/vendors/css/bootstrap.css'
@import '/css/icon.css'

@import "/utylities.styl"

vendor-prefixes ?= webkit moz official


body
	font-family: fuente
	p
		font-size 17px !important
	#superior
		width		100%
		background 	azul
		box-shadow:         0px 2px 2px 0px rgba(0, 0, 0, 0.29);
		z-index 10
		border-bottom solid 1px darkBlue
		#line
			height 		5px
			background cyan
			border none
		header
			max-width  		994px
			margin 			auto
			padding			1em
			padding-top 	0
			padding-bottom 	0
			overflow hidden
			nav 
				a
					color white
				ul
					font-size 0
					li
						font-size 17px
						padding: 1.5em;
						transition all ease 0.5s
						&:hover
							background darkBlue
					#logo
						border none
						margin-right 	1em
						padding-top  	0
						padding-bottom 	0
						&:hover
							background none
						img
							width 50px
						h1	
							font-size 	1.2em
							color 		white
							margin 		0
					#refa
						border-left 0
					#login
						padding 0
						border none
						text-align right
						width 185px
						font-size 17px
						cursor: pointer
						&:hover
							background none
						button
							width 60% !important
							margin-left 43%
							background cyan
							

	#contentContainer
		max-width  		100%
		margin auto
		min-height  	600px
		z-index 1
	#inferior
		width 100%
		padding 1em
		background azul
		overflow hidden
		footer
			max-width 994px
			margin auto
			background transparent !important
			color white
			ul 
				font-size 0
				width 75%
				li
					font-size 	16px
					width 		22%
					text-align center
					margin-bottom 1.5em
				#footerBegin
					width 10%
			#redes 
				width 24%
				margin 0
				ul
					width 100%
					margin-bottom 0
					li
						overflow hidden
						display inline-block
						vertical-align middle !important
						width 50px
						text-align left
						font-size 22px
						margin-bottom 0
					.text
						width 80px
						font-size 16px


	

@import 'nib'


@import '/vendors/css/bootstrap.min.css'
@import '/css/icon.css'
@import "../../utylities.styl"

vendor-prefixes ?= webkit moz official


body
	font-family fuente !important
	font-size 17px
	p
		font-size 16px !important
	#superior
		width		100%
		background 	azul !important
		box-shadow:         0px 2px 2px 0px rgba(0, 0, 0, 0.29);
		#line
			height 		5px
			background cyan
		header
			max-width  		994px
			margin 			auto
			padding			1em
			padding-top 	0
			padding-bottom 	0
			nav 
				a
					color white
				ul
					font-size 0
					margin 0
					li
						font-size 16px
						padding: 1.3em;
						transition all ease 0.5s
						vertical-align middle
						&:hover
							background darkBlue
						.dropdown-toggle
							box-shadow none
					#profile
						font-family fuente
						text-align center !important
						padding-bottom 1em

					#profile,#changeProfile,#notes
						margin 0
						padding 1.2em
						width 300px
						margin 0
						cursor pointer
						position relative
						img
							width 40px
						h2
							font-size 17px
							margin 0
							color white
							font-weight normal
						&:hover .subMenu
							
							top 100%
							display block
						&:hover .arrow
							display block
						.arrow
							position absolute
							bottom -4px
							transform : rotate(-90deg);
							-moz-transform : rotate(-90deg); /* Firefox */
							-webkit-transform : rotate(-90deg); /* Chrome - Safari */
							-o-transform : rotate(-90deg); /* Opera */
							color #F2F2F2
							font-size 20px
							display none
							text-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
						.subMenu
							overflow hidden
							position absolute
							width 100% !important
							margin 0
							padding 0
							margin-left -18px !important
							text-align left
							background #F2F2F2
							top 50%
							webkit-box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
							box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
							-moz-border-radius-bottomright: 5px;
							-webkit-border-bottom-right-radius: 4px;
							border-bottom-right-radius: 4px;
							-moz-border-radius-bottomleft: 4px;
							-webkit-border-bottom-left-radius: 4px;
							border-bottom-left-radius: 4px;
							z-index 9999 !important
							display none
							transition all ease 0.5s
							li
								padding-left 1em
								padding-right 1em
								padding-top 0.5em
								padding-bottom 0.5em
								display block
								width 100%
								font-size 16px
								&:hover
									background #ccc
					#profile
						top 100%
						.arrow
							right 2em !important
					#changeProfile
						.arrow
							right 1.2em
						.subMenu
							width 321% !important
							font-family: 'Audiowide' !important;
							left -173%


					#changeProfile,#notes,#changeCategory
						width 70px;
						text-align center
						cursor pointer
						ul
							box-shadow:         0px 2px 2px 0px rgba(0, 0, 0, 0.29);
							margin-left: 0%;

							li
								width 100%
								a
									overflow hidden
									span
										width 100%
										text-align left !important
										margin-left 0
					#notes
						width 120px
						&:hover .subMenu
							top 110%
						.arrow
							bottom -12px
							right 3.75em
						.subMenu
							width: 300% !important;
							margin-left: -216% !important;

							li 
								width 100%
								border-bottom solid 1px #656d78

							#listNotes
								height 150px
								overflow-y scroll
							#static
								border none
								background #fff
								text-align center
								color orange

					#changeCategory
						width 222px
								
					#logo
						border none
						margin-right 	3em
						padding-top  	0
						padding-bottom 	0
						&:hover
							background none
						img
							width 50px
						h1	
							font-size 	1.2em
							color 		white
							margin 		0
							font-family fuente

				
							
	#subNav,#subNavNew
		margin-top 2em
		ul
			border-top 5px solid #E56B15
			border-bottom 1px solid #ddd
			margin 0
			padding 0
			font-size 17px
			li
				display inline-block
				padding 1em
				margin 0
				width 17.9%
				text-align center
				a
					color #727376
					transition all ease 0.5s
					font-family fuente
					&:hover
						text-decoration none
			.active
				background #E56B15
				a 
					color white
					&:hover
						color white

			.search
				width 26%
				padding 0
				.form-group
					margin-bottom 0
				
	#contentContainer
		max-width  		100%
		margin auto
		min-height  	600px
	.pagination
		font-size 17px
	#inferior
		width 100%
		padding 1em
		background azul
		overflow hidden
		footer
			max-width 994px
			margin auto
			background transparent !important
			color white
			ul 
				font-size 0
				width 75%
				li
					font-size 	16px
					width 		22%
					text-align center
					margin-bottom 1.5em
				#footerBegin
					width 10%
			#redes 
				width 24%
				margin 0
				ul
					width 100%
					margin-bottom 0
					li
						overflow hidden
						display inline-block
						vertical-align middle !important
						width 50px
						text-align left
						font-size 22px
						margin-bottom 0
					.text
						width 80px
						font-size 16px
.form-control-feedback
	top 0
.dropdown-menu
	background-color: #434a54 !important;
	border: none;
	li
		text-align left
		&:hover
			background transparent !important
		a
			&:hover
				background-color: #656d78;
				text-decoration none
				overflow hidden
#errorModal
	padding 1em !important

.custom_scrollbar::-webkit-scrollbar {
	width: 14px;
	height: 0px;
	margin-right 5px
}
.custom_scrollbar::-webkit-scrollbar-track {
	background-color: white;
}
.custom_scrollbar::-webkit-scrollbar-thumb:vertical {
	background-color: #ccc;

}
.custom_scrollbar::-webkit-scrollbar-thumb:vertical:hover {
	background: #bbb;
}

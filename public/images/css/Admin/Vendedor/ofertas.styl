@import 'styleAdmin'

body
	#contentContainer
		max-width 994px;
		margin auto !important
		padding-left 1em 
		padding-right 1em 
		margin-top 1em !important
		#nueva
			text-align left
			padding-top 0.5em !important
			padding-bottom 0.5em !important
			border-left solid 1px #ccc !important
			border solid 2px #16a085 !important
			a
				color #16a085
		#muro
			margin-top 1em
			.sold
				border-left: 5px solid #449d44 !important
				.offer
					a
						background #449d44 !important
						border none
				.mediumTitles
					color #449d44
					margin-bottom 0.5em !important
					display block
			.acept
				border-left: 5px solid orange !important
				.offer
					a
						background orange !important
						border none
				.mediumTitles
					color orange
					margin-bottom 0.5em !important
					display block
			.neutral
				border-left: 5px solid #ccc !important
				.offer
					a
						background #449d44 !important
						border none
					width 70px !important
					float right

			li:nth-child(2n+1)
				border-left: 5px solid darkBlue
			li
				display block
				width 100%
				color white
				border solid 1px #ccc
				border-left: 5px solid #15D4E5
				padding-top 1em
				padding-bottom 1em
				font-family "Lato", Helvetica, Arial, sans-serif
				margin-bottom 1.5em
				padding 1em
				background #f7f6f4
				.info
					display block
					width 100%
					.nombre
						font-size 18px
						margin-right 3em
					.date,.np
						color #727376
					.np
						float right
				.figura
					width 170px
					max-height 170px
					overflow hidden
					margin-right 4%
					img	
						width 100%
				.description
					width 76%
					color #727376
					p
						margin-bottom 0em
						min-height 80px

					.options
						font-weight normal
						font-size 16px
						margin-top 1em
						aside 
							width 32%
							display inline-block
							cursor pointer
						.edit
							width 60%
							text-align left

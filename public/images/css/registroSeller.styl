@import 'style'

#contentContainer
	margin-top -2em !important
	.bg-gray
		border-bottom solid 5px #ccc
		border-top solid 5px #ccc
		margin-top 2em	
	#etapas
		overflow hidden
		box-sizing border-box
		padding-top 0.5em
		padding-bottom 0.5em
		font-size 18px
		padding-bottom 1.5em
		padding-top 1.5em
		a
			color inherit
		li
			width 24.5%
			p
				font-size 17px !important
	.floatLeft
		width 55%
	.floatRight
		width 40%
		.doble
			width 48%
		form
			max-width 100% !important
	#ultimo
		margin 0 !important
	.pallete-item
		width 45%
		line-height 1em
		cursor pointer
		border-radius 4px
		overflow hidden
		text-align center
		-webkit-box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.20);
		-moz-box-shadow:    0px 0px 10px 0px rgba(0, 0, 0, 0.20);
		box-shadow:         0px 0px 10px 0px rgba(0, 0, 0, 0.20);
		display inline-block
		margin-right 5%
		ul
			border-top solid 1px white
			list-style none
			padding 0
			padding-top 1em
			padding-bottom 1em
			background #d7f1fa
			margin 0
			li
				margin-bottom 0.5em
		.superior
			background #4fc1e9
			color #434a54
			padding-top 3em
			position relative
			padding 1em !important
			span
				position absolute
				top 1em
				right 1em
				color white
				background #008C98
				padding 0.5em
				border-radius 50%
				display none
			.mediumTitles
				color white
				text-shadow: 0px 1px 1px rgba(0, 0, 0, 0.3);
				text-transform capitalize
				font-family: fuente
				font-size 1.5em !important
			p
				text-transform lowercase
				line-height: 1.2em;
		.inferior
			background #e6e9ed
			color white
			text-align center
			padding 1em !important
			p
				width 70%
				margin auto
				background #4fc1e9
				padding 0.5em
				border-radius 4px
				text-shadow: 0px 1px 1px rgba(0, 0, 0, 0.3);	
	.active
		-webkit-box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.50);
		-moz-box-shadow:    0px 0px 10px 0px rgba(0, 0, 0, 0.50);
		box-shadow:         0px 0px 10px 0px rgba(0, 0, 0, 0.50);
		
	#registerForm
		margin-top -5px
		border-top solid 5px #15D4E5
		padding-top 2em
		padding-bottom 3em
		font-family: "Lato", Helvetica, Arial, sans-serif;
		article
			font-size 16px
		form
			max-width 350px
			margin auto
		#suscriptionForm
			max-width 100% !important
			overflow hidden
			margin-top 1em
			.floatLeft,.floatRight
				width 45% !important
				.checkbox
					width 48%
					cursor pointer
			.categorys,.marks
				padding 1em
				border solid 1px #ccc
				margin-top 1em
				.checkboxList
					margin 0
					padding 0
					li
						display inline-block
						width 49%
						font-size 18px
						margin-bottom 0.5em
						label
							font-weight normal !important
							margin-left -40px
							cursor pointer
							&:before
								content: "\e738";
								font-family icomoon	
								font-size 0.7em
								opacity 1
								color #ccc
								background #ccc
								padding 4px
								transition all ease 0.5s
								cursor pointer
						input[type='checkbox']
							opacity  0
							width 50px
							&:checked + label
								&:before
									background #3bafda
									color white
									content: "\e6fe";
									font-weight normal !important
							

							

			input[type='submit']
				margin-top 2em !important 
				width 250px !important
					

		
		


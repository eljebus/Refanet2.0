@import 'style'

#contentContainer
	margin-top -2em !important
	.bg-gray
		border-bottom solid 5px #ccc
		border-top solid 5px #ccc
		margin-top 2em	
	#etapas
		overflow hidden
		box-sizing border-box
		padding-top 0.5em
		padding-bottom 0.5em
		font-size 18px
		padding-bottom 1.5em
		padding-top 1.5em
		a
			color inherit

		li
			width 32%
			p
				font-size 17px !important
	#registerForm
		margin-top -5px
		border-top solid 5px #15D4E5
		padding-top 2em
		padding-bottom 3em
		#izquierda
			float left
			width 55%
			overflow hidden
		#derecha
			float right
			width 40%
			margin-left 5%
			.imageContainer
				width 100%
				height 200px;
				overflow hidden
				border solid 1px #ccc
			button
				margin-top 2em
		
		


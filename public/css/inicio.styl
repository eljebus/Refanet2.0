@import 'style'


#imgContainer
	background url('/images/background.jpg')
	background-size 100%
	background-position 0 -170px
	height 320px;
	overflow hidden
	border-bottom solid 5px #ccc
	#imgContent
		max-width 994px
		margin auto
		padding-left 1em
		padding-right 1em
		padding-top 40px
		img
			height 300px
			position relative
			z-index 1
		#infoContainer
			padding 0.7em
			margin-top 2em
			#info
				width 350px
				font-family: "Lato", Helvetica, Arial, sans-serif;
				color white
				font-size 18px
				text-shadow: 0px 2px 2px rgba(0, 0, 0, 1);
				p
					font-size 1.2em !important
					font-style: italic;
				.title
					color white
					width 100%
					display block
					font-weight bold
					font-size 2em !important

			#botones
				width 270px
				margin-left 2em
				a
					margin-bottom 25px
					transition all ease 0.5s
					text-shadow: 0px 1px 1px rgba(0, 0, 0, 0.3);
					border-radius 5px
					background #04B5FF
					border none
					border-bottom solid 4px #0295D4
					font-size 17px
					&:hover
						box-shadow:         0px 0px 18px 0px rgba(255, 255, 255, 0.86);
				#buyer
					background #FF910F
					border-bottom-color #E68105
				p
					margin-top 1em
					font-size 16px
					color white
					text-shadow: 0px 1px 0px rgba(0, 0, 0, 1);
#contentContainer		
	margin-top 2em !important
	z-index 3
	position relative
	max-width 100% !important
	#servicios
		background white
		padding-bottom 3em
		padding-top 4em
		border-top: solid 5px  #FF0A31;
		margin-top -33px
		box-sizing border-box
		font-family: "Lato", Helvetica, Arial, sans-serif;
		aside
			width 32%
			margin-top 0
			margin-left 1%
			span
				background: #e56b15
				color: white;
				padding: 0.3em;
				border-radius: 50%;
			article	
				width 65.5%
				margin-left 5%
				font-size 16px !important
				.title
					font-weight bold
				p
					line-height:21px !important;
	#guiaContainer
		background #ECEDEE
		padding 1em
		width 100%
		border-top solid 5px #ccc
		padding-bottom 4.5em
		font-family: "Lato", Helvetica, Arial, sans-serif;
		#guia
			margin-top -19px
			border-top solid 5px #15D4E5
			aside
				width 35%
				margin-top 2em
			#videoTutorial
				width 60%
				margin-left 3%
				height: 300px;
				box-shadow 0px 1px 15px 0px rgba(0, 0, 0, 0.5)

			


		

		



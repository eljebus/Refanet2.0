@import 'style'


body 
	background-image 	url('/images/background.jpg')
	background-size 	100% auto
	padding 			0
	margin				0
	#container
		margin 		auto
		width 400px
		margin-top  0em
		box-shadow 0px 1px 15px 0px rgba(0, 0, 0, 0.3)
		#logo
			background 	#006B75
			padding		1em
			padding-top 5em
			text-align center
			img
				width 50px
			h1
				color white
				font-size 1.5em
				margin 0
			h2
				font-size 17px
				font-weight normal
				color white
				font-style:italic;
				line-height: 167%;
			h3
				margin-top 2em
				font-size 17px
				color white
				font-weight normal
				font-family "Lato", Helvetica, Arial, sans-serif
		ul
			list-style none
			margin 0
			padding 0
			background #F6F1EA
			font-size 17px
			li 
				display block
				padding 0.5em
				padding-left 1.5em
				border-bottom solid 1px #ccc
				transition all ease 0.5s
				&:hover
					padding-left 1.7em
				&:hover a
					color black
					cursor pointer
				a
					transition all ease 0.5s
					color #7A7978
					

	